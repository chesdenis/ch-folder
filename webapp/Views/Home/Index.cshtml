@{
    ViewData["Title"] = "Ch Photo Gallery";
    var queryText = Context.Request.Query["query"].ToString();
    var selectedTags = Context.Request.Query["tags"].ToArray();
    var filters = Context.Request.Query["filters"].ToArray();
    var sorting = Context.Request.Query["sorting"].ToArray();

    // Paging and view options from query
    var currentPage = int.TryParse(Context.Request.Query["page"], out var p) ? p : 1;
    var pageSize = int.TryParse(Context.Request.Query["pageSize"], out var ps) ? ps : 12;
    var thumbSize = int.TryParse(Context.Request.Query["size"], out var sz) ? sz : 256;
    var totalItems = int.TryParse(Context.Request.Query["total"], out var ti) ? ti : 15;

    var totalPages = (int)Math.Ceiling(totalItems / (double)Math.Max(1, pageSize));
}

<div class="container-fluid mt-4 px-3">
    <form method="get" action="@Url.Action("Search", "Home")" class="row g-3">
        <div class="col-12">
            <textarea class="form-control"
                      name="query"
                      placeholder="Enter search text"
                      rows="3">@queryText</textarea>
        </div>
        <!-- Fluent-style top toolbar: page size, tag selector, size controls, and search -->
        <div class="col-12">
            <div class="fluent-toolbar">
                <div class="toolbar-group" role="group" aria-label="Images per page">
                    <span class="toolbar-label">Images/page</span>
                    <div class="segmented">
                        <button type="button" class="seg-btn page-size-btn @(pageSize==6?"active":"")" data-pagesize="6">6</button>
                        <button type="button" class="seg-btn page-size-btn @(pageSize==12?"active":"")" data-pagesize="12">12</button>
                        <button type="button" class="seg-btn page-size-btn @(pageSize==24?"active":"")" data-pagesize="24">24</button>
                        <button type="button" class="seg-btn page-size-btn @(pageSize==48?"active":"")" data-pagesize="48">48</button>
                    </div>
                </div>
                <!-- Tags selector placed inline in the toolbar -->
                <div class="toolbar-group" role="group" aria-label="Tags selector">
                    <span class="toolbar-label">Tags</span>
                    @await Component.InvokeAsync("TagsSelector", new {
                        availableTags = new [] { "ASP.NET", "C#", "JavaScript", "CSS", "HTML" },
                        selectedTags = ViewBag.SelectedTags as IEnumerable<string>
                    })
                </div>
                <div class="toolbar-group" role="group" aria-label="Thumbnail size">
                    <span class="toolbar-label">Thumb size</span>
                    <div class="segmented">
                        <button type="button" id="sizeDownBtn" class="seg-btn" aria-label="Make smaller">Smaller</button>
                        <button type="button" id="sizeUpBtn" class="seg-btn" aria-label="Make larger">Larger</button>
                    </div>
                </div>
                <div class="toolbar-spacer"></div>
                <!-- Preserve current state on submit -->
                <input type="hidden" name="size" value="@thumbSize" />
                <input type="hidden" name="pageSize" value="@pageSize" />
                @* Preserve any existing filters/sorting from the current query *@
                @foreach (var f in filters)
                {
                    <input type="hidden" name="filters" value="@f" />
                }
                @foreach (var s in sorting)
                {
                    <input type="hidden" name="sorting" value="@s" />
                }
                <button type="submit" class="btn btn-primary btn-lg touch">Search</button>
            </div>
        </div>
    </form>
    <div class="row">
        <div class="col-12">
            @await Component.InvokeAsync("Pagination", new { currentPage, totalPages })
            @await Component.InvokeAsync("Gallery", new { page = currentPage, pageSize = pageSize, thumbSize = thumbSize })
            @await Component.InvokeAsync("Pagination", new { currentPage, totalPages })
        </div>
    </div>
</div>



@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/photoswipe@5.4.3/dist/photoswipe.css">
    <style>
        .fluent-toolbar {
            display: flex;
            align-items: center;
            gap: .75rem;
            flex-wrap: wrap;
            background: var(--bs-body-bg);
            border: 1px solid rgba(0,0,0,.08);
            border-radius: 12px;
            padding: .75rem;
            box-shadow: 0 1px 2px rgba(0,0,0,.06), 0 2px 8px rgba(0,0,0,.04);
        }
        .toolbar-group { display: flex; align-items: center; gap: .5rem; }
        .toolbar-label { font-size: .95rem; color: #6c757d; }
        .segmented { display: inline-flex; border: 1px solid rgba(0,0,0,.1); border-radius: 10px; overflow: hidden; }
        .seg-btn {
            background: transparent;
            border: 0;
            padding: .6rem .9rem;
            min-width: 3.25rem;
            font-size: 1rem;
            touch-action: manipulation;
        }
        .seg-btn:focus { outline: none; }
        .segmented .seg-btn + .seg-btn { border-left: 1px solid rgba(0,0,0,.1); }
        .seg-btn:hover { background: rgba(0,0,0,.04); }
        .seg-btn.active { background: rgba(0, 90, 255, .12); color: rgb(0, 82, 204); font-weight: 600; }
        .toolbar-spacer { flex: 1; }
        .btn.touch, .seg-btn { border-radius: 10px; }

        /* Tags selector chips styling to match fluent toolbar */
        .tags-selector { display: inline-flex; flex-wrap: wrap; gap: .5rem; }
        .tags-selector .tag-checkbox { position: absolute; opacity: 0; width: 0; height: 0; }
        .tags-selector .tag-chip {
            display: inline-flex;
            align-items: center;
            padding: .5rem .75rem;
            border: 1px solid rgba(0,0,0,.1);
            border-radius: 9999px;
            background: transparent;
            font-size: .95rem;
            line-height: 1;
            cursor: pointer;
            user-select: none;
        }
        .tags-selector .tag-chip:hover { background: rgba(0,0,0,.04); }
        .tags-selector .tag-checkbox:checked + .tag-chip {
            background: rgba(0, 90, 255, .12);
            color: rgb(0, 82, 204);
            border-color: rgba(0, 90, 255, .3);
            font-weight: 600;
        }
        .tags-selector .tag-checkbox:focus-visible + .tag-chip {
            outline: 2px solid rgba(0, 90, 255, .35);
            outline-offset: 2px;
        }
        @@media (pointer: coarse) {
            .seg-btn { padding: .8rem 1.1rem; font-size: 1.05rem; }
            .btn.touch { padding: .9rem 1.25rem; font-size: 1.05rem; }
            .tags-selector .tag-chip { padding: .65rem .9rem; }
        }
    </style>
}

@section Scripts {
    <script type="module">
        import PhotoSwipeLightbox
            from 'https://cdn.jsdelivr.net/npm/photoswipe@5.4.3/dist/photoswipe-lightbox.esm.js';

        // Helpers to manage query string
        function setQueryParam(url, key, value) {
            const u = new URL(url, window.location.origin);
            if (value === null || value === undefined || value === '') {
                u.searchParams.delete(key);
            } else {
                u.searchParams.set(key, value);
            }
            return u.toString();
        }
        function wirePageSizeButtons() {
            const buttons = document.querySelectorAll('.page-size-btn');
            buttons.forEach(btn => {
                btn.addEventListener('click', () => {
                    const size = btn.getAttribute('data-pagesize');
                    let url = window.location.href;
                    url = setQueryParam(url, 'pageSize', size);
                    url = setQueryParam(url, 'page', '1');
                    window.location.href = url;
                });
            });
        }

        // Two-button size control via URL param manipulation (no server action)
        function getCurrentSize() {
            const allowed = [16, 32, 64, 128, 256, 512, 2000];
            const params = new URL(window.location.href).searchParams;
            const sizeParam = parseInt(params.get('size') || '@thumbSize', 10);
            if (allowed.includes(sizeParam)) return sizeParam;
            // snap to nearest if arbitrary
            return allowed.reduce((prev, curr) => Math.abs(curr - sizeParam) < Math.abs(prev - sizeParam) ? curr : prev, allowed[0]);
        }
        function adjustSize(direction) {
            const allowed = [16, 32, 64, 128, 256, 512, 2000];
            const current = getCurrentSize();
            const idx = allowed.indexOf(current);
            let newIdx = idx;
            if (direction === 'up') newIdx = Math.min(allowed.length - 1, idx + 1);
            if (direction === 'down') newIdx = Math.max(0, idx - 1);
            const nextSize = allowed[newIdx];
            let url = window.location.href;
            url = setQueryParam(url, 'size', String(nextSize));
            url = setQueryParam(url, 'page', '1');
            window.location.href = url;
        }
        function wireSizeButtons() {
            const up = document.getElementById('sizeUpBtn');
            const down = document.getElementById('sizeDownBtn');
            if (up) up.addEventListener('click', () => adjustSize('up'));
            if (down) down.addEventListener('click', () => adjustSize('down'));
        }

        document.addEventListener('DOMContentLoaded', () => { wirePageSizeButtons(); wireSizeButtons(); });

        const lightbox = new PhotoSwipeLightbox({
            gallery: '#my-gallery',
            children: 'a',
            pswpModule: () => import('https://cdn.jsdelivr.net/npm/photoswipe@5.4.3/dist/photoswipe.esm.js')
        });

        lightbox.init();
    </script>
}

