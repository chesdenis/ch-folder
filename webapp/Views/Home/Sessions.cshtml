@model IReadOnlyList<webapp.Services.SearchSessionRow>
@{ 
    ViewData["Title"] = "Sessions";
    var total = (int)(ViewBag.Total ?? 0);
    var page = (int)(ViewBag.Page ?? 1);
    var pageSize = (int)(ViewBag.PageSize ?? 20);
    var totalPages = Math.Max(1, (int)Math.Ceiling(total / (double)pageSize));
    var prevDisabled = page <= 1 ? "disabled" : string.Empty;
    var nextDisabled = page >= totalPages ? "disabled" : string.Empty;
    var ps10 = pageSize == 10 ? "active" : string.Empty;
    var ps20 = pageSize == 20 ? "active" : string.Empty;
    var ps50 = pageSize == 50 ? "active" : string.Empty;
    var prevPage = Math.Max(1, page - 1);
    var nextPage = Math.Min(totalPages, page + 1);
}

<h3 class="mb-3">Search Sessions</h3>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead>
        <tr>
            <th scope="col">Created</th>
            <th scope="col">Query</th>
            <th scope="col">Model</th>
            <th scope="col">Results</th>
            <th scope="col">Min Score</th>
            <th scope="col">Open</th>
        </tr>
        </thead>
        <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var s in Model)
            {
                <tr>
                    <td class="text-nowrap">@s.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                    <td class="text-truncate" style="max-width: 420px;" title="@s.QueryText">@s.QueryText</td>
                    <td class="text-nowrap">@s.EmbeddingModel</td>
                    <td>@s.ResultCount</td>
                    <td>@(s.ScoreThreshold?.ToString("0.00") ?? "-")</td>
                    <td>
                        <a class="btn btn-sm btn-primary"
                           asp-controller="Home"
                           asp-action="Search"
                           asp-route-sessionId="@s.Id">Open</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">No sessions yet</td>
            </tr>
        }
        </tbody>
    </table>
    <div class="d-flex justify-content-between align-items-center">
        <div class="text-muted">Total: @total</div>
        <nav aria-label="Pagination">
            <ul class="pagination mb-0">
                <li class="page-item @prevDisabled">
                    <a class="page-link" href='@Url.Action("Sessions", new { page = prevPage, pageSize = pageSize })'>Prev</a>
                </li>
                <li class="page-item disabled"><span class="page-link">@($"Page {page} / {totalPages}")</span></li>
                <li class="page-item @nextDisabled">
                    <a class="page-link" href='@Url.Action("Sessions", new { page = nextPage, pageSize = pageSize })'>Next</a>
                </li>
            </ul>
        </nav>
    </div>
    <div class="mt-2">
        <div class="btn-group" role="group" aria-label="Page size">
            <a class="btn btn-outline-secondary @ps10" href='@Url.Action("Sessions", new { page = 1, pageSize = 10 })'>10</a>
            <a class="btn btn-outline-secondary @ps20" href='@Url.Action("Sessions", new { page = 1, pageSize = 20 })'>20</a>
            <a class="btn btn-outline-secondary @ps50" href='@Url.Action("Sessions", new { page = 1, pageSize = 50 })'>50</a>
        </div>
    </div>
</div>
