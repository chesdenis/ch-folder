@using shared_csharp
@model webapp.Models.ValidationStatusViewModel
@{
    ViewData["Title"] = "Content Quality Status";
}

<div class="row">
    <div class="col-md-12 col-lg-12">
        <h1 class="mb-3">Content quality status</h1>

        <div class="card mb-3">
            <div class="card-body">
                <div class="row g-2 align-items-center">
                    <div class="col-12 col-md-8">
                        <div class="form-control-plaintext">Storage: @ViewBag.StoragePath</div>
                    </div>
                    <div class="col-12 col-md-4 text-md-end">
                        <a class="btn btn-outline-secondary" href="@Url.Action("ContentQualityStatus")">Refresh</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">Folder health and data consistency</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm align-middle mb-0">
                        <thead>
                        <tr>
                            <th scope="col" style="width:60%">Folder</th>
                            @foreach (var x in ModelConstants.ContentValidationKeys)
                            {
                                <th scope="col">@x.Item2</th>
                            }
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var folderName in Model.Items.Select(s => s.Folder).Distinct().OrderBy(x => x).ToList())
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("ContentQualityDetails", new { folder = folderName })"
                                       title="View details">
                                        <code>@folderName</code>
                                    </a>
                                </td>
                                @foreach (var fs in ModelConstants.ContentValidationKeys)
                                {
                                    var test = Model.Items.FirstOrDefault(f => f.Folder.Equals(folderName) && f.TestKind.Equals(fs.Item1));
                                    if (test == null)
                                    {
                                        <td>
                                            <span>Missing</span>
                                        </td>
                                    }
                                    else
                                    {
                                        var color = test.Status == "Passed" ? "#28a745" : test.Status == "Failed" ? "#dc3545" : test.Status == "Running" ? "#ffc107" : "#6c757d";

                                        <td>
                                            <span style="color:@color">@test.Status</span>
                                        </td>
                                    }
                                }

                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
