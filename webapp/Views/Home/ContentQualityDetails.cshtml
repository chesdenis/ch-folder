@model webapp.Models.ValidationDetailsViewModel
@{
    ViewData["Title"] = "Content Quality Details";
}

<div class="row">
    <div class="col-md-10 col-lg-8">
        <h1 class="mb-3">Content quality details</h1>

        <div class="card mb-3">
            <div class="card-body">
                <div class="row g-2 align-items-center">
                    <div class="col-12 col-md-8">
                        <div class="form-control-plaintext">Storage: @ViewBag.StoragePath</div>
                        <div class="form-control-plaintext">Folder: <code>@Model.Folder</code></div>
                    </div>
                    <div class="col-12 col-md-4 text-md-end">
                        <a class="btn btn-outline-secondary" href="@Url.Action("ContentQualityDetails", new { folder = Model.Folder })">Refresh</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">Validation tests</div>
            <div class="card-body">
                @if (Model.Items == null || !Model.Items.Any())
                {
                    <div class="text-muted">No validation details available.</div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-sm align-middle mb-0">
                            <thead>
                            <tr>
                                <th scope="col" style="width:20%">Test</th>
                                <th scope="col" style="width:10%">Status</th>
                                <th scope="col" style="width:70%">Details</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model.Items)
                            {
                                var color = item.Status == "Passed" ? "#28a745" : item.Status == "Failed" ? "#dc3545" : item.Status == "Running" ? "#ffc107" : "#6c757d";
                                <tr>
                                    <td><span>@item.TestKind</span></td>
                                    <td><span style="color:@color">@item.Status</span></td>
                                    <td>
                                        @if (item.Parsed is not null)
                                        {
                                            <div class="small text-muted mb-1">
                                                @if (item.Parsed.Total.HasValue)
                                                {
                                                    <span>Total: <strong>@item.Parsed.Total.Value</strong></span>
                                                }
                                                @if (item.Parsed.Mismatches.HasValue)
                                                {
                                                    <span class="ms-3">Mismatches: <strong>@item.Parsed.Mismatches.Value</strong></span>
                                                }
                                            </div>
                                            @if (item.Parsed.Failures is not null && item.Parsed.Failures.Any())
                                            {
                                                <div class="table-responsive">
                                                    <table class="table table-sm table-bordered mb-0">
                                                        <thead>
                                                        <tr>
                                                            <th style="width:70%">File</th>
                                                            <th style="width:30%">Reason</th>
                                                        </tr>
                                                        </thead>
                                                        <tbody>
                                                        @foreach (var f in item.Parsed.Failures)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    @if (!string.IsNullOrWhiteSpace(f.File))
                                                                    {
                                                                        <code title="@f.File">@f.File</code>
                                                                    }
                                                                    else
                                                                    {
                                                                        <span class="text-muted">(no file)</span>
                                                                    }
                                                                </td>
                                                                <td>
                                                                    @if (!string.IsNullOrWhiteSpace(f.Reason))
                                                                    {
                                                                        <span>@f.Reason</span>
                                                                    }
                                                                    else
                                                                    {
                                                                        <span class="text-muted">(no reason)</span>
                                                                    }
                                                                </td>
                                                            </tr>
                                                        }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No failures</span>
                                            }
                                        }
                                        else if (!string.IsNullOrWhiteSpace(item.Details))
                                        {
                                            <pre class="mb-0" style="white-space:pre-wrap">@item.Details</pre>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No details</span>
                                        }
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                }

                <div class="mt-3">
                    <a class="btn btn-link" href="@Url.Action("ContentQualityStatus")">Back to status</a>
                </div>
            </div>
        </div>
    </div>
</div>
